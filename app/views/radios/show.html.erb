<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", radios_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_radio_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", radio_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.radio.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @radio.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.radio.description", :default => t("activerecord.labels.description", :default => "description")) %>:</b>
          <%= @radio.description %>
        </p>
      <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_radio_path(@radio), :class => "button" %> 
      <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", radio_path(@radio), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>       
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>